{
    "compilerOptions": {
      "target": "es6",
      "module": "commonjs",
      "outDir": "./lib",
      "rootDir": "./",
      "strict": false,
      // "noImplicitAny": true,
      "esModuleInterop": true,
      // "noImplicitReturns": true,
      "moduleResolution": "Node", // needed for ncc to find the @actions modules
      "checkJs": false,
      "noEmit": true,
      "skipLibCheck": true
    },
    "include": ["./pr_management/*/*.ts", "./pr_management/common.ts", "pr_management/logger.ts"],
    // "exclude": ["../node_modules/*"] // only affects files added by include
  }